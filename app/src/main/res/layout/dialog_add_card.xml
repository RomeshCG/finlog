<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/colorSurface">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_new_card"
        android:textColor="@color/colorOnSurface"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <Spinner
        android:id="@+id/card_type_spinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_text_background"
        android:padding="8dp"
        android:spinnerMode="dropdown" />

    <EditText
        android:id="@+id/card_number_input"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/card_number"
        android:inputType="number"
        android:maxLength="16"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_text_background"
        android:padding="8dp"
        android:textColor="@color/colorOnSurface"
        android:textColorHint="@color/colorGrayMedium" />

    <EditText
        android:id="@+id/card_holder_name_input"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/card_holder_name"
        android:inputType="textPersonName"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_text_background"
        android:padding="8dp"
        android:textColor="@color/colorOnSurface"
        android:textColorHint="@color/colorGrayMedium" />

    <EditText
        android:id="@+id/card_cvv_input"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/cvv"
        android:inputType="number"
        android:maxLength="3"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_text_background"
        android:padding="8dp"
        android:textColor="@color/colorOnSurface"
        android:textColorHint="@color/colorGrayMedium" />

    <EditText
        android:id="@+id/card_balance_input"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/balance"
        android:inputType="numberDecimal"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_text_background"
        android:padding="8dp"
        android:textColor="@color/colorOnSurface"
        android:textColorHint="@color/colorGrayMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:backgroundTint="@color/colorGrayMedium"
            android:textColor="@color/colorOnSurface"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorOnSurface" />
    </LinearLayout>
</LinearLayout>